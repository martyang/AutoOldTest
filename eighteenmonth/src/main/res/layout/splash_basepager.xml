<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:paddingTop="10dp"
        android:id="@+id/tv_title"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher_round"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preinstall_guidance"
            android:textSize="30sp"/>
    </LinearLayout>


    <TextView
        android:layout_margin="10dp"
        android:id="@+id/tv_shuoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_title"
        android:text="@string/condition_1"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_margin="10dp"
            android:id="@+id/pager_finish"
            style="@style/btn_finish_styles"
            />
        <Button
            android:id="@+id/pager_last"
            style="@style/btn_last_styles"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/pager_next"
            android:layout_margin="10dp"
            style="@style/btn_next_styles"
            android:layout_alignParentEnd="true"
            />

        <View
            android:id="@+id/view2"
            android:background="#44000000"
            android:layout_alignTop="@+id/pager_next"
            android:layout_width="match_parent"
            android:layout_height="1.2dp"/>


    </RelativeLayout>

</RelativeLayout>