<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp">

    <EditText
        android:inputType="number"
        android:maxLength="5"
        android:hint="请输入一个测试次数"
        android:id="@+id/fs_et_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_below="@+id/fs_et_count"
        android:id="@+id/fs_btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始填充"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/fs_btn_start"
        android:gravity="center"
        android:id="@+id/fs_tv_nowCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:id="@+id/fs_tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fs_btn_start"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/fs_tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/fs_tv_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</RelativeLayout>